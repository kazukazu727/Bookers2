  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <% @user.each do |user| %>
          <%=attachment_image_tag user, :profile_image, :fill, 63, 63, format:"jpg", fallback:"https://bookers-level2.herokuapp.com/assets/no_image-72379a4da21cb04a58337cf92d85bc39f8d534cbc78254c2085acaca82236bfa.jpg" %>
