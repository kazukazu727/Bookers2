<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">

      <h2>User info</h2>
      <% @user.each do |user_image| %>
      <div>
        <%= link_to user_image_path(user_image.id) do %>
          <%=attachment_image_tag user_image, :image :fill, 63, 63, format:"jpeg", fallback: "no_image.jpg" %>
        <%end%>
        <table class="table">
          <tobody>
            <tr>
              <th>name</th>
              <th><%= user.name %></th>
            </tr>
            <tr>
              <th>introduction</th>
              <th><%= user.introduction %></th>
            </tr>
          </tobody>
        </table>
        <div class="row">
          <%= link_to "fas fa-user-cog", edit_user_path(@user), {class: "btn btn-outline-secondary btn-block"} %>
        </div>
        <%end%>

        <h2 class="mt-3">New book</h2>
        <%= form_with model: @book do |form| %>
        <div class="form-group">
          <label for="book_title">Title</label>
          <%=f.text_field :title %>
        </div>
        <div class="form-group">
          <label for="book_opinion">Opinion</label>
          <%=f.text_field :opinion %>
        </div>
        <div class="form-group">
          <label for="book_title">Title</label>
          <%=f.submit "Create Book" %>
        </div>
        <%end%>
      </div>

    </div>
  </div>
</div>