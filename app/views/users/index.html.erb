<div class="container px-5 px-sm-0">
  <div class="row">

    <%= render 'users/list', locals:{user: @user, book: @book}%>

    <div class="col-md-8 offset-md-1">
      <h2>Users</h2>
      <table class="table">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tobody>
          <%@users.each do |user|%>
            <tr>
              <td><%=user.profile_image%></td>
              <td><%=user.name%></td>
              <td><%=link_to "Show", user_path(user.id)%></td>
            </tr>
          <%end%>
        </tobody>
      </table>
    </div>

  </div>
</div>