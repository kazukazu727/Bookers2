<div class="container px-5 px-sm-0">
  <div class="row">

    <%= render 'users/list', locals:{user: @user, book: @book}%>

    <div class="col-md-8 offset-md-1">
      <h2>Users</h2>
      <table class="table">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tobody>
          <%@users.each do |user|%>
            <tr>
              <td><%=attachment_image_tag @user, :profile_image, format:"jpg", fallback:"https://bookers-level2.herokuapp.com/assets/no-image-icon-d3f9e11cb2bb284b42e0810f94b03c50126f51f482ea43054b87c2b7ebaa01d5.jpg" %></td>
              <td><%=user.name%></td>
              <td><%=link_to "Show", user_path(user.id)%></td>
            </tr>
          <%end%>
        </tobody>
      </table>
    </div>

  </div>
</div>