<div class="container px-5 px-sm-0">
   
  <div class="row">
    <%= render 'books/list', locals:{user: @user, book: @book}%>

    <div class="col-md-8 offset-md-1">
        <h2>Book detail</h2>
        <table class="table">
            <tobody>
                <tr>
                    <td>
                       <%=link_to user_path(@user.id) do%>
                           <%=attachment_image_tag @user, :profile_image, format:"jpg", fallback:"https://bookers-level2.herokuapp.com/assets/no-image-icon-d3f9e11cb2bb284b42e0810f94b03c50126f51f482ea43054b87c2b7ebaa01d5.jpg" %>
                           <%=@user.name%>
                       <%end%>
                    </td>
                    <td><%=@book.title%></td>
                    <td><%=@book.opinion%></td>
                    <% if @book.user == current_user %>
                        <td>
                            <%= link_to edit_book_path(@book), class:"btn btn-sm btn-success" do%>
                            Edit
                            <%end%>
                        </td>
                        <td>
                            <%= link_to book_path(@book), method: :delete, "data-confirm"=>"本当に削除しますか？", class:"btn btn-sm btn-danger" do%>
                            Destroy
                            <%end%>
                        </td>
                    <% end %>
                </tr>
            </tobody>
        </table>
    </div>
  </div>
</div>

