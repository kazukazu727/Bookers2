<div class="container px-5 px-sm-0">
   <% if @book.errors.any? %>
      <div id="error_explanation">
        <h3><%=@book.errors.count%>error prohibited this obj from being saved:</h3>
        <ul>
          <%@book.errors.full_messages.each do |message|%>
            <li><%=message%></li>
          <%end%>
        </ul>
      </div>
      <%end%>
  <div class="row">
    <%= render 'books/list', locals:{user: @user, book: @book}%>

    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tobody>
          <%@books.each do |book|%>
            <tr>
              <td>
                <%=link_to user_path(@user.id) do%>
                   <%=attachment_image_tag @user, :profile_image, format:"jpg", fallback:"https://bookers-level2.herokuapp.com/assets/no-image-icon-d3f9e11cb2bb284b42e0810f94b03c50126f51f482ea43054b87c2b7ebaa01d5.jpg" %>
                <%end%>
              </td>
              <td><%=link_to book.title, book_path(book.id)%></td>
              <td><%=book.opinion%></td>
            </tr>
          <%end%>
        </tobody>
      </table>
    </div>


  </div>
</div>